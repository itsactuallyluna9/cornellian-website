---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { Image } from 'astro:assets';

import PlaceholderImage from "../images/comics/tiny-stupid-hands.png";
import Advertisement from '../components/Advertisement.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- center -->
			<div class="grid justify-center">
                <h1 class="text-4xl font-bold text-center font-mono text-purple-600 dark:text-purple-400">404</h1>
                <h2 class="text-2xl font-semibold italic text-center">Page Not Found</h2>
                <Image src={PlaceholderImage} alt="404" class="dark:invert" />
                <p class="italic text-xs">Above: replace with an image of a squirrel looking really confused.</p>
                <p class="text-center">Sorry, the page you are looking for does not exist.</p>
				<Advertisement />
			</div>
		</main>
		<Footer />
	</body>
</html>
